doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Create Account
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100..900;1,100..900&family=Playwrite+AU+TAS:wght@100..400&family=Poly:ital@0;1&display=swap', rel='stylesheet')
    script(src='https://cdn.tailwindcss.com')
    link(rel='stylesheet', href='stylesheets/css.css')
    link(rel='stylesheet', href='stylesheets/output.css')
  body
    .poly-regular(style='background-color: blueviolet;height: 100vh;')
      h1.text-center.pb-7.text-5xl.relative.top-5.font-bold.text-yellow-50 Sign up
      .text-center.font-semibold.mt-2 Sign up to create an account on zona invents
      form.rounded-xl.flex.flex-col.mx-auto.gap-7.mt-5.items-center.p-4.pt-6.pb-6(action='https://inventory-hf31.onrender.com/users/user/', method='post', style='background-color: black;', class='md:w-2/5 w-11/12 sm:w-3/5')
        .w-full
          label.text-2xl.text-yellow-50.font-semibold(for='fn') username 
          br
          input#fn.font-semibold.w-full.h-11.mt-2.text-black.text-xl.rounded-2xl.p-2.peer(name='name', style='background-color: rgba(207, 185, 185, 0.253); border: 2px solid blueviolet;', type='text', placeholder='username',value=valname)
          span(style="color:red")=mfn
        .block(class="w-full")
          label.text-2xl.text-yellow-50.font-semibold(for='fn2') password 
          svg#eyeopen(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24',class="inline-block hidden",onclick="togVis()")
            path(d='M12 4.5C6.5 4.5 2 12 2 12s4.5 7.5 10 7.5 10-7.5 10-7.5-4.5-7.5-10-7.5zm0 12C8.4 16.5 5 12 5 12s3.4-4.5 7-4.5 7 4.5 7 4.5-3.4 4.5-7 4.5zm0-8C10.3 8.5 9 10.8 9 12s1.3 3.5 3 3.5 3-1.5 3-3.5-1.3-3.5-3-3.5z', fill='#000')
          
          svg#eyeclose(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewBox='0 0 24 24',class="inline-block", onclick="togVis()")
            path(d='M12 4.5C6.5 4.5 2 12 2 12s4.5 7.5 10 7.5 10-7.5 10-7.5-4.5-7.5-10-7.5zm0 12C8.4 16.5 5 12 5 12s3.4-4.5 7-4.5 7 4.5 7 4.5-3.4 4.5-7 4.5zm0-8C10.3 8.5 9 10.8 9 12s1.3 3.5 3 3.5 3-1.5 3-3.5-1.3-3.5-3-3.5z', fill='#000')
            line(x1='4', y1='4', x2='20', y2='20', stroke='#000', stroke-width='2')
          br 
          input#fn2.font-semibold.w-full.h-11.mt-2.text-black.text-xl.rounded-2xl.p-2(name='password', style='background-color: rgba(207, 185, 185, 0.253); border: 2px solid blueviolet;', type='password', placeholder='***********',value=valpass)
          
          span(style="color:red")=mfp
        .w-full
          label.text-2xl.text-yellow-50.font-semibold(for='fn3') Email
          br
          input#fn3.font-semibold.w-full.h-11.mt-2.text-black.text-xl.rounded-2xl.p-2(name='email', style='background-color: rgba(207, 185, 185, 0.253); border: 2px solid blueviolet;', type='email', placeholder='',value=valemail, required)
          span(style="color:red")=mfe
        button.text-2xl.rounded-3xl.pl-5.pr-5.font-semibold.text-white.p-3(style='background-color: blueviolet;', type='submit')
          | continue  
          svg.inline-block(xmlns='http://www.w3.org/2000/svg', height='24px', viewBox='0 -960 960 960', width='24px', fill='#ffffff')
            path(d='M647-440H160v-80h487L423-744l57-56 320 320-320 320-57-56 224-224Z')
        p.text-1xl.font-medium.text-white
          a.text-blue-700(href='https://inventory-hf31.onrender.com/login') Log in
          |  if you already have an account
  script.      
    function togVis(){
      const elem=document.getElementById("fn2");
      const eyeicon=document.getElementById("eyeopen");
      const eyeicon2=document.getElementById("eyeclose");
      if(elem.type=="password"){
        elem.type="text"
        eyeicon.style.display="inline-block"
        eyeicon2.style.display="none"

        return
      }
      else{
        elem.type="password"
       eyeicon.style.display="none"
       eyeicon2.style.display="inline-block"
      }
    }